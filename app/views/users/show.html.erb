<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <div class="d-flex flex-column justify-content-center text-center mt-4 position-fixed">
        <div class="d-flex">
          <%= gravatar_for @user %>
          <% if logged_in? && @user == current_user %>
            <%= link_to edit_user_path(@user) do %>
              <i class="bi bi-pencil-square" ></i>
            <% end %>
          <% end %>
        </div>
        <h3 class="mt-3"><strong><%= @user.username %></strong></h3>
        <div class="fst-italic">Contact: <%= @user.email %></div>        
      </div>
    </div>
    <div class="col-md-9">
      <%= render 'articles/article' %>
    </div>
  </div>
</div>