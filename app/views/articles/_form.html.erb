<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= form_with(
        model: @article, 
        local: true, 
        data: { turbo: false }, 
        class: "bg-primary p-3 shadow rounded"
      ) do |f| %>
        <div class="row mb-3">
          <div class="col-md-2">
            <%= f.label :title, class: "form-label text-white" %>
          </div>
          <div class="col-md-10">
            <%= f.text_field :title, class: "form-control shadow-none", placeholder: "Title of article" %>
          </div>
          <% if @article.errors[:title].any?%>
            <div class="col-md-10 offset-md-2 text-warning fs-6">
              *Title <%= @article.errors[:title].first%>
            </div>
          <% end %>
        </div>

        <div class="row mb-3">
          <div class="col-md-2">
            <%= f.label :description, class: "form-label text-white" %> <br/>
          </div>
          <div class="col-md-10">
            <%= f.text_area :description, class: "form-control shadow-none", rows: 10,
            placeholder: "Description of article"%>
          </div>
          <% if @article.errors[:description].any?%>
            <div class="col-md-10 offset-md-2 text-warning fs-6">
              *Description <%= @article.errors[:description].first%>
            </div>
          <% end %>
        </div>

        <div class="row mb-3">
          <div class="col-md-2">
            <%= f.label :category, class: "form-label text-white" %>
          </div>
          <div class="col-md-10">
            <%= f.collection_select(:category_ids, Category.order(:name), :id, :name, 
            { prompt: "" }, { :multiple => true, class: "form-select", size: "2" }) %>
          </div>
        </div>

        <div class="form-group mb-3 text-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

