
<div class="container w-50">
  <div class="row justify-content-center align-items-center">
  <h2 class="text-center mt-3 text-primary">Login</h2>
    <div class="col-md-10">
      <%= form_with(
        scope: :session,
        local: true,
        data: { turbo: false }, 
        class: "bg-primary px-3 shadow rounded py-5"
      ) do |f| %>
        <div class="row mb-3">
          <div class="col-md-2">
            <%= f.label :email, class: "form-label text-white" %>
          </div>
          <div class="col-md-10">
            <%= f.email_field :email, class: "form-control shadow-none",
            placeholder: "Enter email"%>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-2">
            <%= f.label :password, class: "form-label text-white" %>
          </div>
          <div class="col-md-10">
            <%= f.password_field :password, class: "form-control shadow-none",
            placeholder: "Choose a password" %>
          </div>
        </div>
        <div class="form-group text-center">
          <%= f.submit "Login" ,class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

